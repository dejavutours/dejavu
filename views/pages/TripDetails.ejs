  <%- include('../partials/headtag'); %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
      :root {
        --primary-blue: #1a4b8e;
        --light-gray: #f8f9fa;
      }

      .image-slider {
        width: 100%;
        height: 300px;
        border-radius: 12px;
        overflow: hidden;
        position: relative;
      }

      .image-slider .swiper-slide {
        width: 100%;
        height: 100%;
      }

      .image-slider img {
        width: 100%;
        min-height: 300px;
        object-fit: cover;
      }

      .image-slider .swiper-button-next,
      .image-slider .swiper-button-prev {
        color: white;
        background: rgba(0, 0, 0, 0.3);
        width: 40px;
        height: 40px;
        border-radius: 50%;
      }

      .image-slider .swiper-button-next:after,
      .image-slider .swiper-button-prev:after {
        font-size: 20px;
      }

      .image-slider .swiper-pagination-bullet {
        background: white;
        opacity: 0.7;
      }

      .image-slider .swiper-pagination-bullet-active {
        opacity: 1;
      }

      .trek-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 0;
      }

      .trek-title {
        font-size: 20px;
        margin: 0;
      }

      .trek-subtitle {
        color: #6c757d;
        font-size: 14px;
      }

      .btn-book-now {
        background: var(--primary-blue);
        color: white;
        padding: 8px 24px;
        border-radius: 10px;
        text-decoration: none;
        margin: 2px;
      }

      .image-slider {
        border-radius: 12px;
        overflow: hidden;
        margin-bottom: 24px;
      }

      .image-slider img {
        width: 100%;
        height: 300px;
        object-fit: cover;
      }

      .city-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
      }

      .city-card.active {
        border-color: var(--primary-blue);
      }

      .city-image {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        object-fit: cover;
      }

      .date-selector {
        display: flex;
        gap: 8px;
        overflow-x: auto;
        padding: 8px 0;
      }

      .date-item {
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        cursor: pointer;
      }

      .date-item.active {
        background: var(--primary-blue);
        color: white;
        border-color: var(--primary-blue);
      }

      .itinerary-item {
        border: none;
        background: transparent;
        width: 100%;
        text-align: left;
        padding: 12px;
        border-radius: 8px;
      }

      .itinerary-item:hover {
        background: var(--light-gray);
      }

      .package-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 8px;
      }

      .package-table th {
        background: var(--light-gray);
        padding: 12px;
      }

      .package-table td {
        padding: 12px;
        border-top: 1px solid #dee2e6;
      }

      .link-icon {
        text-decoration: none;
        color: #6c757d;
        display: inline-flex;
        align-items: center;
        gap: 4px;
      }

      .bs-example {
        margin: 20px;
      }

      .modal-dialog iframe {
        margin: 0 auto;
        display: block;
      }

      .play-btn {
        width: 100px;
        height: 100px;
        background: radial-gradient(rgba(35, 235, 142, 0.8) 60%,
            rgba(255, 255, 255, 1) 62%);
        border-radius: 50%;
        position: relative;
        display: block;
        margin: 100px auto;
        box-shadow: 0px 0px 25px 3px rgba(35, 235, 142, 0.8);
      }

      /* triangle */
      .play-btn::after {
        content: "";
        position: absolute;
        left: 50%;
        top: 50%;
        -webkit-transform: translateX(-40%) translateY(-50%);
        transform: translateX(-40%) translateY(-50%);
        transform-origin: center center;
        width: 0;
        height: 0;
        border-top: 15px solid transparent;
        border-bottom: 15px solid transparent;
        border-left: 25px solid #fff;
        z-index: 100;
        -webkit-transition: all 400ms cubic-bezier(0.55, 0.055, 0.675, 0.19);
        transition: all 400ms cubic-bezier(0.55, 0.055, 0.675, 0.19);
      }

      /* pulse wave */
      .play-btn:before {
        content: "";
        position: absolute;
        width: 150%;
        height: 150%;
        -webkit-animation-delay: 0s;
        animation-delay: 0s;
        -webkit-animation: pulsate1 2s;
        animation: pulsate1 2s;
        -webkit-animation-direction: forwards;
        animation-direction: forwards;
        -webkit-animation-iteration-count: infinite;
        animation-iteration-count: infinite;
        -webkit-animation-timing-function: steps;
        animation-timing-function: steps;
        opacity: 1;
        border-radius: 50%;
        border: 5px solid rgba(255, 255, 255, 0.75);
        top: -30%;
        left: -30%;
        background: rgba(198, 16, 0, 0);
      }

      @-webkit-keyframes pulsate1 {
        0% {
          -webkit-transform: scale(0.6);
          transform: scale(0.6);
          opacity: 1;
          box-shadow: inset 0px 0px 25px 3px rgba(255, 255, 255, 0.75),
            0px 0px 25px 10px rgba(255, 255, 255, 0.75);
        }

        100% {
          -webkit-transform: scale(1);
          transform: scale(1);
          opacity: 0;
          box-shadow: none;
        }
      }

      @keyframes pulsate1 {
        0% {
          -webkit-transform: scale(0.6);
          transform: scale(0.6);
          opacity: 1;
          box-shadow: inset 0px 0px 25px 3px rgba(255, 255, 255, 0.75),
            0px 0px 25px 10px rgba(255, 255, 255, 0.75);
        }

        100% {
          -webkit-transform: scale(1, 1);
          transform: scale(1);
          opacity: 0;
          box-shadow: none;
        }
      }

      /* City card styling */
      .city-card {
        width: 150px;
        flex-shrink: 0;
        text-align: center;
        background: #747474;
        padding: 10px;
        border: 1px solid black;
        border-radius: 5px;
        cursor: pointer;
      }

      /* Scroll container styling */
      #carouselTrack {
        white-space: nowrap;
        scroll-behavior: smooth;
        scrollbar-width: none;
        /* Hides scrollbar (Firefox) */
        -ms-overflow-style: none;
        /* Hides scrollbar (IE/Edge) */
      }

      /* Hide scrollbar for WebKit browsers */
      #carouselTrack::-webkit-scrollbar {
        display: none;
      }

      /* Button positioning */
      .carousel-control-prev,
      .carousel-control-next {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        z-index: 10;
        background: rgba(0, 0, 0, 0.3);
        border-radius: 50%;
        width: 40px;
        height: 40px;
      }

      .carousel-control-prev {
        left: 10px;
      }

      .carousel-control-next {
        right: 10px;
      }
    </style>
