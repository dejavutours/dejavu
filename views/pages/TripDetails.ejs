        document
          .querySelectorAll(".city-card")
          .forEach((el) => el.classList.remove("active"));
        element.classList.add("active");
        document.getElementById("selectedCity").value = city;
      }

      // Initialize date selection
      document.querySelectorAll(".date-item").forEach((date) => {
        date.addEventListener("click", () => {
          document
            .querySelectorAll(".date-item")
            .forEach((d) => d.classList.remove("active"));
          date.classList.add("active");
        });
      });

      // slider
      function slideLeft() {
        const container = document.getElementById("carouselTrack");
        container.scrollBy({ left: -200, behavior: "smooth" });
        checkSlideButtons();
      }

      function slideRight() {
        const container = document.getElementById("carouselTrack");
        container.scrollBy({ left: 200, behavior: "smooth" });
        checkSlideButtons();
      }

      function checkSlideButtons() {
        const container = document.getElementById("carouselTrack");
        const prevBtn = document.getElementById("prevBtn");
        const nextBtn = document.getElementById("nextBtn");

        if (container.scrollWidth > container.clientWidth) {
          prevBtn.classList.remove("d-none");
          nextBtn.classList.remove("d-none");

          if (container.scrollLeft === 0) {
            prevBtn.classList.add("d-none");
          }

          if (
            container.scrollLeft + container.clientWidth >=
            container.scrollWidth
          ) {
            nextBtn.classList.add("d-none");
          }
        } else {
          prevBtn.classList.add("d-none");
          nextBtn.classList.add("d-none");
        }
      }

      // Run on page load and resize
      window.onload = checkSlideButtons;
      window.onresize = checkSlideButtons;
    </script>
