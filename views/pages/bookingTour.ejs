        text-decoration: none;
        color: #002d66;
        font-weight: bold;
        display: flex;
        align-items: center;
      }

      .back-btn_booking svg {
        margin-right: 0.5rem;
      }

      .container_booking {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        justify-content: center;
      }

      .form_section_booking,
      .summary_section_booking {
        background-color: #fff;
