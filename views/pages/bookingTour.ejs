        <!-- Submit Form  with Validation -->
         <script>
           document.getElementById('bookingForm').addEventListener('submit', function (e){
            e.preventDefault();
            // validation 

            // create object for send data 
            const form = document.getElementById('bookingForm');
            const formData = new FormData(form);
            const data = {
                  _csrf: formData.get('_csrf'),
                  tourDetails: <%-JSON.stringify(tourDetails) %>,
                  transportType:formData.get('transportType'),
                  joiningFrom:document.getElementById('joiningFrom').value.trim(),
                  travelDate:formData.get('travelDate'),
                  totalPerson: {
                    adult: formData.get('adults'),
                    child: formData.get('children')
                  },
                  childPrice: formData.get('childprice'),
                  adultPrice: formData.get('Adultprice'),
                  paidAmount: formData.get('payingAmount'),
                  totalTripCost: formData.get('payingAmount'), // its change when partial payment implement
                  bookingStatus: 'Confirmed',  // will changes when implement partial payment
                  paymentStatus:'Paid'
                };
                const NoofAdutts = document.getElementById('adults').value.trim();
                const NoofChild = document.getElementById('children').value.trim();
