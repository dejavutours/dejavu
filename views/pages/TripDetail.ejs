  color: var(--dark-gray);
  padding: 10px 24px;
  border-radius: 8px;
  font-size: 0.9rem;
  font-weight: 500;
  transition: background var(--transition), transform var(--transition);
  display: flex;
  align-items: center;
  width: 100%;
  justify-content: center;
}

.quick-call-modal-btn:hover {
  background: #e6c200;
  transform: translateY(-2px);
}

.quick-call-modal-btn:disabled {
