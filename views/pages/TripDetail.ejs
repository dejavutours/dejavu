  border: none;
  padding: 6px 12px;
  cursor: pointer;
  font-weight: 500;
  font-size: 0.9rem;
  border-radius: 6px;
  transition: background var(--transition), color var(--transition);
}

.tour-booking-year-tab:hover,
.tour-booking-year-tab.active,
.tour-booking-month-tab:hover,
.tour-booking-month-tab.active {
