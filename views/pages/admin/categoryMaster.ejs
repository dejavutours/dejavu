<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard - Category Management</title>

  <!-- Bootstrap 5 + Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

  <!-- Select2, Toastify, Cropper -->
  <link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/cropperjs@1.6.2/dist/cropper.min.css" rel="stylesheet" />

  <style>
    body {
      background: #f8fafc;
      font-family: 'Inter', sans-serif;
    }
    .cm-container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 1.5rem 1rem;
    }
    .cm-tabs .nav-link {
      color: #555;
      font-weight: 600;
      padding: 0.75rem 1.5rem;
    }
    .cm-tabs .nav-link.active {
      color: #0d6efd;
      border-bottom: 3px solid #0d6efd;
    }
    .card {
      border: none;
      border-radius: 12px;
      overflow: hidden;
    }
    .card-header {
      background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
      color: white;
      cursor: pointer;
    }
    .cm-card-grid .card {
      transition: all 0.3s ease;
      cursor: move;
      border-radius: 10px;
    }
    .cm-card-grid .card:hover {
      transform: translateY(-6px);
      box-shadow: 0 12px 25px rgba(0,0,0,0.12) !important;
    }
    .cm-card-grid img {
      width: 100%;
      height: 120px;
      object-fit: cover;
      border-radius: 8px;
    }
    .cm-card-grid .card-body {
      padding: 0.9rem;
    }
    .cm-card-grid h6 {
      font-size: 0.95rem;
      font-weight: 600;
      margin-bottom: 0.4rem;
    }
    .cm-card-grid .badge {
      font-size: 0.7rem;
    }
    .cm-order-input {
      width: 60px !important;
      font-size: 0.8rem;
    }
    #cmLoadingOverlay {
      position: fixed;
      top: 0; left: 0; right: 0; bottom: 0;
      background: rgba(0,0,0,0.75);
      display: none;
      align-items: center;
      justify-content: center;
      z-index: 9999;
    }
    .form-help {
      font-size: 0.85rem;
      color: #6b7280;
      margin-top: 0.35rem;
    }
    .drag-hint {
      font-size: 0.9rem;
      color: #4b5563;
      text-align: center;
      margin: 1rem 0;
      font-weight: 500;
    }
  </style>

  <%- include('../../partials/headtag', {isNiceSelect: true}); %>
</head>

<body class="bg-light">
  <%- include('../../partials/header', {isSearch: false}); %>

  <div class="cm-container">
    <!-- Loading Overlay -->
    <div id="cmLoadingOverlay" class="d-none">
      <div class="spinner-border text-primary" style="width: 3.5rem; height: 3.5rem;">
        <span class="visually-hidden">Loading...</span>
      </div>
    </div>

    <!-- Tabs -->
    <ul class="nav nav-tabs cm-tabs mb-4">
      <li class="nav-item"><a class="nav-link" href="/cities">City Master</a></li>
      <li class="nav-item"><a class="nav-link" href="/states">State Master</a></li>
      <li class="nav-item"><a class="nav-link active" href="/categories">Category Master</a></li>
      <li class="nav-item"><a class="nav-link" href="/banner">Banner Master</a></li>
      <li class="nav-item"><a class="nav-link" href="/trips">Trip Master</a></li>
      <li class="nav-item"><a class="nav-link" href="/customTrip">Custom Trip</a></li>
    </ul>

    <!-- Add/Edit Form -->
    <div class="card shadow-sm mb-4">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h6 class="mb-0">
          <i class="fas fa-tags me-2"></i>
          <span>Add / Edit Category</span>
        </h6>
        <div class="d-flex align-items-center gap-2">
          <button type="button" class="btn btn-light"><a class="dropdown-item" href="/admin/category-trip-order" target="_blank">Trips Ord.</a></button>
          <button type="button" id="cmCancelBtn" class="btn btn-outline-secondary btn-sm d-none">Cancel</button>
          <button type="submit" form="cmCategoryForm" id="cmSubmitBtn" class="btn btn-primary position-relative">
            <span class="submit-text">Save</span>
            <span class="spinner-border spinner-border-sm ms-2 d-none" role="status"></span>
          </button>
          <button class="btn btn-link text-white p-0" data-bs-toggle="collapse" data-bs-target="#categoryFormCollapse">
            <i class="fas fa-chevron-down" id="toggleIcon"></i>
          </button>
        </div>
      </div>

      <div class="collapse show" id="categoryFormCollapse">
        <form id="cmCategoryForm" action="/categories" method="POST" enctype="multipart/form-data" class="card-body">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <input type="hidden" id="cmCategoryId" name="id" />
          <input type="hidden" id="cmOldImage" name="oldImage" />

          <div class="row g-4 align-items-start">
            <!-- Category Name -->
            <div class="col-lg-5">
              <label for="cmCategoryName" class="form-label fw-semibold">Category Name <span class="text-danger">*</span></label>
              <input type="text" id="cmCategoryName" name="name" class="form-control form-control-lg" required placeholder="e.g. Adventure, Beach, Hill Station" />
            </div>

            <!-- Image Upload -->
            <div class="col-lg-4">
              <label for="cmImage" class="form-label fw-semibold">Category Image (Recommended: 400x300)</label>
              <input type="file" id="cmImage" name="image" accept="image/*" class="form-control" />
              <div class="mt-3" id="cmImagePreviewContainer" style="display: none;">
                <div class="position-relative d-inline-block">
                  <img id="cmImagePreview" src="" alt="Preview" class="img-thumbnail rounded" style="max-height: 140px;" data-bs-toggle="modal" data-bs-target="#cmPreviewModal" />
                  <button type="button" class="btn btn-danger btn-sm position-absolute top-0 end-0 rounded-circle" id="cmRemoveImage">
                    <i class="fas fa-times"></i>
                  </button>
                </div>
              </div>
            </div>

            <!-- Switches -->
            <div class="col-lg-3">
              <div class="mb-4">
                <label class="form-label fw-semibold">Active Status</label>
                <div class="form-check form-switch">
                  <input class="form-check-input" type="checkbox" id="cmIsActive" name="isActive" checked>
                  <label class="form-check-label" for="cmIsActive">Active</label>
                </div>
              </div>

              <div>
                <label class="form-label fw-semibold">Show on Homepage</label>
                <div class="form-check form-switch">
                  <input class="form-check-input" type="checkbox" id="cmIsShowOnHomePage" name="isShowOnHomePage">
                  <label class="form-check-label" for="cmIsShowOnHomePage">Visible</label>
                </div>
                <div class="form-help">
                  If enabled, this category and its trips will appear on the homepage.
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>

    <!-- Filters + Hint -->
    <div class="card shadow-sm mb-4">
      <div class="card-body">
        <div class="row g-3 align-items-end mb-3">
          <div class="col-lg-5">
            <input type="text" id="cmSearchInput" class="form-control" placeholder="Search categories..." />
          </div>
          <div class="col-lg-3">
            <select class="form-select select2" id="cmActiveFilter">
              <option value="">All Status</option>
              <option value="true">Active Only</option>
              <option value="false">Inactive Only</option>
            </select>
          </div>
          <div class="col-lg-4 d-flex gap-2">
            <button id="cmClearFiltersBtn" class="btn btn-outline-secondary flex-grow-1">Clear Filters</button>
            <button id="cmBulkDeleteBtn" class="btn btn-danger d-none flex-grow-1">Delete Selected</button>
          </div>
        </div>
        <div class="drag-hint">
          <i class="fas fa-arrows-alt me-2"></i>
          Drag & drop cards to reorder categories. Lower number = appears first on homepage.
        </div>
      </div>
    </div>

    <!-- Categories Grid -->
    <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 row-cols-xl-6 g-4 cm-card-grid" id="cmCategoryGrid"></div>

    <div class="text-end mt-4">
      <button id="cmSaveOrderBtn" class="btn btn-success btn-lg d-none">
        <i class="fas fa-save me-2"></i> Save New Order
      </button>
    </div>
  </div>

  <!-- Image Preview Modal -->
  <div class="modal fade" id="cmPreviewModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-lg">
      <div class="modal-content">
        <div class="modal-header bg-primary text-white">
          <h5 class="modal-title">Image Preview</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body text-center bg-light p-4">
          <img id="cmPreviewModalImg" src="" class="img-fluid rounded shadow" style="max-height: 70vh;" />
        </div>
      </div>
    </div>
  </div>

  <%- include('../../partials/footer'); %>

  <!-- Scripts -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script> -->
  <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

  <script>
    let categories = <%- JSON.stringify(categories || []) %>;
    let filteredCategories = [...categories];
    let selectedCategories = [];
    let formModified = false;
    let sortable = null;

    $(document).ready(function () {
      $(".select2").select2({ width: '100%' });

      function initSortable() {
        const el = document.getElementById('cmCategoryGrid');
        if (sortable) sortable.destroy();
        sortable = Sortable.create(el, {
          animation: 180,
          ghostClass: 'bg-light',
          onEnd: () => $('#cmSaveOrderBtn').removeClass('d-none')
        });
      }

      function renderCategories() {
        const $grid = $('#cmCategoryGrid');
        $grid.empty();

        if (filteredCategories.length === 0) {
          $grid.append(`<div class="col-12 text-center py-5"><p class="text-muted fs-4">No categories found</p></div>`);
          return;
        }

        filteredCategories.forEach(cat => {
          const card = `
            <div class="col" data-id="${cat._id}">
              <div class="card h-100 shadow-sm position-relative overflow-hidden">
                <div class="position-absolute top-0 start-0 p-2 z-3">
                  <input type="checkbox" class="form-check-input cm-checkbox" data-id="${cat._id}">
                </div>
                <img src="${cat.image || '/images/default-category.jpg'}" alt="${cat.name}" class="card-img-top">
                <div class="card-body text-center d-flex flex-column">
                  <h6 class="card-title">${cat.name}</h6>
                  <div class="mb-2">
                    ${cat.isActive ? '<span class="badge bg-success">Active</span>' : '<span class="badge bg-secondary">Inactive</span>'}
                    ${cat.isShowOnHomePage ? ' <span class="badge bg-info">Homepage</span>' : ''}
                  </div>
                  <input type="number" class="form-control form-control-sm mx-auto cm-order-input" value="${cat.displayOrder || 0}" min="0" data-id="${cat._id}" title="Display Order">
                  <div class="mt-3 d-flex gap-1 justify-content-center">
                    <button class="btn btn-sm btn-warning text-white" onclick="editCategory('${cat._id}')">
                      <i class="fas fa-edit"></i>
                    </button>
                    <form action="/categories/delete/${cat._id}" method="POST" class="d-inline">
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                      <button type="submit" class="btn btn-sm btn-danger">
                        <i class="fas fa-trash"></i>
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            </div>`;
          $grid.append(card);
        });

        $('.cm-checkbox').on('change', function() {
          const id = $(this).data('id');
          if ($(this).is(':checked')) selectedCategories.push(id);
          else selectedCategories = selectedCategories.filter(x => x !== id);
          $('#cmBulkDeleteBtn').toggleClass('d-none', selectedCategories.length === 0);
        });

        initSortable();
      }

      window.editCategory = function(id) {
        const cat = categories.find(c => c._id === id);
        if (!cat) return;

        $('#cmCategoryId').val(id);
        $('#cmCategoryName').val(cat.name);
        $('#cmIsActive').prop('checked', !!cat.isActive);
        $('#cmIsShowOnHomePage').prop('checked', !!cat.isShowOnHomePage);

        if (cat.image) {
          $('#cmImagePreview').attr('src', cat.image);
          $('#cmPreviewModalImg').attr('src', cat.image);
          $('#cmImagePreviewContainer, #cmRemoveImage').show();
          $('#cmOldImage').val(cat.image);
        } else {
          $('#cmImagePreviewContainer, #cmRemoveImage').hide();
          $('#cmOldImage').val('');
        }

        $('#cmSubmitBtn').removeClass('btn-primary').addClass('btn-danger').find('.submit-text').text('Update Category');
        $('#cmCancelBtn').removeClass('d-none');
        formModified = true;
        $('#categoryFormCollapse').collapse('show');
      };

      $('#cmCancelBtn').click(function() {
        $('#cmCategoryForm')[0].reset();
        $('#cmCategoryId, #cmOldImage').val('');
        $('#cmImagePreviewContainer, #cmRemoveImage').hide();
        $('#cmSubmitBtn').removeClass('btn-danger').addClass('btn-primary').find('.submit-text').text('Add Category');
        $('#cmCancelBtn').addClass('d-none');
        formModified = false;
      });

      $('#cmCategoryForm :input').on('input change', () => {
        if (!formModified) {
          formModified = true;
          $('#cmSubmitBtn').removeClass('btn-primary').addClass('btn-danger').find('.submit-text').text('Update Category');
        }
      });

      $('#cmCategoryForm').on('submit', function(e) {
        e.preventDefault();
        $('#cmLoadingOverlay').removeClass('d-none');
        $('#cmSubmitBtn .spinner-border').removeClass('d-none');

        const fd = new FormData(this);
        fd.set('isActive', $('#cmIsActive').is(':checked'));
        fd.set('isShowOnHomePage', $('#cmIsShowOnHomePage').is(':checked'));

        $.ajax({
          url: '/categories', method: 'POST', data: fd,
          processData: false, contentType: false,
          success: res => {
            $('#cmLoadingOverlay').addClass('d-none');
            Toastify({ text: res.message, style: { background: res.success ? "#10B981" : "#EF4444" } }).showToast();
            if (res.success) location.reload();
          },
          error: () => {
            $('#cmLoadingOverlay').addClass('d-none');
            Toastify({ text: "Server error", style: { background: "#EF4444" } }).showToast();
          }
        });
      });

      $('#cmSaveOrderBtn').click(function() {
       const order = Array.from($('#cmCategoryGrid > .col')).map(el => el.dataset.id);
        $('#cmLoadingOverlay').removeClass('d-none');

        $.post('/categories/update-order', {
          _csrf: '<%= csrfToken %>',
          order: order
        }, res => {
          $('#cmLoadingOverlay').addClass('d-none');
          Toastify({ text: res.message || "Order saved!", style: { background: res.success ? "#10B981" : "#EF4444" } }).showToast();
          if (res.success) {
            $('#cmSaveOrderBtn').addClass('d-none');
            categories = order.map(id => categories.find(c => c._id === id)).filter(Boolean);
            filteredCategories = [...categories];
            renderCategories();
          }
        }).fail(() => {
          $('#cmLoadingOverlay').addClass('d-none');
          Toastify({ text: "Failed to save order", style: { background: "#EF4444" } }).showToast();
        });
      });

      // Search & Filter
      let st;
      $('#cmSearchInput').on('input', () => {
        clearTimeout(st);
        st = setTimeout(() => {
          const term = $('#cmSearchInput').val().toLowerCase().trim();
          const status = $('#cmActiveFilter').val();
          filteredCategories = categories.filter(c =>
            c.name.toLowerCase().includes(term) &&
            (status === '' || String(c.isActive) === status)
          );
          renderCategories();
        }, 300);
      });

      $('#cmActiveFilter').on('change', () => $('#cmSearchInput').trigger('input'));
      $('#cmClearFiltersBtn').click(() => {
        $('#cmSearchInput').val('');
        $('#cmActiveFilter').val('').trigger('change');
      });

      // Collapse icon
      $('#categoryFormCollapse').on('show.bs.collapse', () => $('#toggleIcon').removeClass('fa-chevron-down').addClass('fa-chevron-up'));
      $('#categoryFormCollapse').on('hide.bs.collapse', () => $('#toggleIcon').removeClass('fa-chevron-up').addClass('fa-chevron-down'));

      renderCategories();
    });
  </script>
</body>
</html>