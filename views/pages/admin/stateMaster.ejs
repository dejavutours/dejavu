    .sm-form {
      padding: 1rem;
    }

    .sm-card {
      background: #ffffff;
      border-radius: 0.75rem;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.08);
      padding: 0.75rem;
      display: flex;
      flex-direction: column;
      align-items: center;
      cursor: move;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
