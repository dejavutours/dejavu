                    <div class="duration"> üìÖ <%= tour.days %></div>
                    <div class="price-container">
                        <span class="price-label">From</span>
                        <span class="price"><%= tour.package_cost %></span>
                        <span class="price-note">/person</span>
                    </div>
                </div>
            </div>
            <% }); %>
