<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script>
  // Wait for the DOM to be fully loaded
  document.addEventListener('DOMContentLoaded', function() {
    if (('<%=filterChips%>')) {
      const filterChips = ('<%=filterChips%>').split(',');
      if (filterChips) {
        filterChips.forEach((chip, index) => {
          const chipProperty = document.getElementById(chip);
          chipProperty.checked = true;
        });
      }
    }
    if (('<%=Searchvalue%>')) {
      const apiSearchvalue = ('<%=Searchvalue%>');
      if (apiSearchvalue) {
        document.getElementById("searchValue").value = apiSearchvalue;
      }
    }
    const SearchEntry = document.getElementById('SearchEntry');
    SearchEntry.addEventListener('keypress', function(event) {
      if (event.key === 'Enter') {
        const Searchvalues = document.getElementById("SearchEntry").value;
        document.getElementById("searchValue").value = Searchvalues;
        updatefilterValueforApiCall();
        getTourListAPICall();
        //document.getElementById("search").value = JSON.stringify(Searchvalues);
      }
    })
  });
  // document.addEventListener('DOMContentLoaded', function() {
  // Get the filter button and modal elements
  const filterButton = document.getElementById('filterButton');
  const filtersModal = document.getElementById('filtersModal');
  const clearButton = document.getElementById('clearButton');
  const ApplyFilterButton = document.getElementById('ApplyFilterButton');
  // Create a Bootstrap modal instance
  const modal = new bootstrap.Modal(document.getElementById('filtersModal'));

  // Event listener for filter button
  filterButton.addEventListener('click', function() {
    modal.show();
  });

  // Event listener for clear button
  clearButton.addEventListener('click', function() {
    // Get all checkboxes and clear them
    const checkboxes = document.querySelectorAll('input[type="checkbox"]');
    checkboxes.forEach(checkbox => {
      checkbox.checked = false;
    });

    // Reset select dropdowns
    const selects = document.querySelectorAll('select');
    selects.forEach(select => {
      select.selectedIndex = 0;
    });
  });

  // get filter list
  function getCheckedValues() {
    const categories = {};
    document.querySelectorAll('.filter-section').forEach(section => {
      const sectionTitle = section.querySelector('.filter-section-title')?.innerText.trim();
      if (!sectionTitle) return;
      const checkedValues = Array.from(section.querySelectorAll('input[type="checkbox"]:checked'))
        .map(input => input.id);
      categories[sectionTitle] = checkedValues;
    });
    // Apply Filter Chip on page 
    //renderChips(Object.values(categories).flat());
    return categories;
  };
  // call function on submit 
  function updatefilterValueforApiCall() {
    const filterValue = getCheckedValues();
    document.getElementById("filterValue").value = JSON.stringify(filterValue);
  };
  // Filter grid
  ApplyFilterButton.addEventListener('click', function() {
