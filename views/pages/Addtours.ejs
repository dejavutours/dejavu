                            <div class="col">
                                <label for="citydetails[${x}][prices]" class="form-label">price</label>
                                <input type="number" name="citydetails[${x}][prices]" class="form-control" placeholder="prices">
                            </div>
                         <div class="col">
                                    <label for="citydetails[${x}][Dates]" class="form-label">Select dates</label>
                                    <input type="text" class="myDatePicker form-control" name="citydetails[${x}][Dates]"
                                        placeholder="Select multiple dates">
                                </div>
                            <div class="col">
                                <label for="citydetails[${x}][ac]" class="form-label">AC</label>
                                <input type="number" name="citydetails[${x}][ac]" class="form-control" placeholder="AC">
                            </div>
                             <div class="col">
                                <label for="citydetails[${x}][flight]" class="form-label">Flight</label>
                                <input type="number" name="citydetails[${x}][flight]" class="form-control" placeholder="Flight">
                            </div>
                                <div class="col">
                                    <label for="citydetails[${x}][nodays]" class="form-label">Days</label>
                                    <input type="number" name="citydetails[${x}][nodays]" class="form-control"
                                        placeholder="Days">
                                         <a href="#" class="remove_field text-danger">Remove</a>
                                </div>
                            
                        </div>
                            <div class="form-row">
                                <div class="col-sm-6">
                                    <textarea class="form-control daysadd" name="citydetails[${x}][daysadd]"
                                        id="citydetails[${x}][daysadd]" contenteditable="true">
                                    </textarea>
                                </div>
                            </div>
                        </div>
                       `); // add input boxes.
                $('.daysadd:last').jqte();
                document.querySelectorAll('.myDatePicker').forEach(function (element) {
                    flatpickr(element, {
                        mode: "multiple",       // Enable multiple date selection
                        dateFormat: "Y-m-d",     // Date format (you can adjust this)
                        defaultDate: [],
                    });
                });
            }
        });

        $(wrapper).on("click", ".remove_field", function (e) { //user click on remove text
            e.preventDefault(); $(this).parent('div').parent('div').parent('div').remove();
            x--;
        })
    });
</script>
