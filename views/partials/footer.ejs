<script>
    document.addEventListener("DOMContentLoaded", () => {
      const currentPath = window.location.pathname;
      document.querySelectorAll("#topNavbar .nav-link").forEach(link => {
        if (link.getAttribute("href") === currentPath) {
          link.classList.add("active");
        }
      });
    });
    function handlePdfClick(event, url) {
  event.preventDefault(); // Prevent default until file is verified
  fetch(url, { method: 'HEAD' })
    .then(response => {
      if (response.ok) {
        window.open(url, '_blank'); // Open PDF in new tab
      } else {
        alert('Sorry, the document is not available at the moment. Please contact support at +91 851111 7891.');
      }
    })
    .catch(error => {
      console.error('Error checking PDF:', error);
      alert('An error occurred while trying to access the document. Please try again later or contact support.');
    });
}
</script>